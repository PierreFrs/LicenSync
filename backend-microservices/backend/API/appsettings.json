{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  
  "FileValidationSettings": {
    "AllowedPictureExtensions": ".jpg, .jpeg, .png",
    "AllowedAudioExtensions": ".mp3",
    "PictureFileSizeLimit": 5242880,
    "AudioFileSizeLimit": 20971520,
    "MimeType": "image/jpeg, image/png"
  },

  "FileStorageSettings": {
    "ProfilePicturesFolder": "/src/backend/Uploads/Pictures/ProfilePictures",
    "AlbumVisualsFolder": "/src/backend/Uploads/Pictures/AlbumVisuals",
    "TrackVisualFilesFolder": "/src/backend/Uploads/Pictures/TrackVisuals",
    "TrackAudioFilesFolder": "/src/backend/Uploads/AudioFiles"
  }
}
